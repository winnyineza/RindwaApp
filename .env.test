# Test Environment Configuration
NODE_ENV=test

# Test Database
DATABASE_URL=postgresql://postgres:password@localhost:5432/rindwa_test
TEST_DATABASE_URL=postgresql://postgres:password@localhost:5432/rindwa_test

# JWT Configuration (longer key for testing)
JWT_SECRET=test-jwt-secret-key-super-long-for-security-testing-purposes-only

# Disable external services in tests
SENDGRID_API_KEY=test-sendgrid-key
SENDGRID_FROM_EMAIL=test@rindwa.com
RESEND_API_KEY=test-resend-key

TWILIO_ACCOUNT_SID=test-twilio-sid
TWILIO_AUTH_TOKEN=test-twilio-token
TWILIO_PHONE_NUMBER=+250788000000

# Test server configuration
PORT=3001
FRONTEND_URL=http://localhost:3001

# Disable logging in tests (except errors)
LOG_LEVEL=error

# Fast test configurations
RATE_LIMIT_ENABLED=false
CACHE_ENABLED=false
BACKUP_ENABLED=false

# Test-specific features
ENABLE_TEST_ROUTES=true
ENABLE_DEBUG_LOGS=false

# File upload test settings
UPLOAD_MAX_SIZE=1048576
UPLOAD_DIR=test-uploads

# Encryption for test backups
BACKUP_ENCRYPTION_KEY=test-backup-encryption-key-32-chars-long-for-testing-only
