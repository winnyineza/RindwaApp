# === DATABASE CONFIGURATION ===
DATABASE_URL=postgresql://username:password@localhost:5432/rindwa_db

# === JWT AUTHENTICATION ===
JWT_SECRET=your-super-secure-jwt-secret-key-change-this-in-production

# === EMAIL SERVICE (SENDGRID) ===
SENDGRID_API_KEY=your-sendgrid-api-key
SENDGRID_FROM_EMAIL=admin@yourdomain.com

# === EMAIL SERVICE (RESEND - ALTERNATIVE) ===
RESEND_API_KEY=your-resend-api-key

# === SMS SERVICE (TWILIO) ===
TWILIO_ACCOUNT_SID=your-twilio-account-sid
TWILIO_AUTH_TOKEN=your-twilio-auth-token
TWILIO_PHONE_NUMBER=+1234567890

# === GOOGLE MAPS API ===
GOOGLE_MAPS_API_KEY=your-google-maps-api-key

# === APPLICATION CONFIGURATION ===
NODE_ENV=development
PORT=3000
FRONTEND_URL=http://localhost:5000

# === SECURITY (Development-friendly rates) ===
CORS_ORIGINS=http://localhost:5000,http://localhost:3000

# === FILE UPLOADS ===
UPLOAD_MAX_SIZE=10485760
UPLOAD_ALLOWED_TYPES=image/jpeg,image/png,image/webp,application/pdf

# === BACKUP CONFIGURATION ===
# Generate with: openssl rand -hex 32
BACKUP_ENCRYPTION_KEY=36642a744ccbecb6cbdc83321635669807226072c40b748d049c5450cbd6c2d8
BACKUP_RETENTION_DAYS=7

# === MONITORING & LOGGING ===
LOG_LEVEL=info
ENABLE_AUDIT_LOGS=true

# === FEATURE FLAGS ===
ENABLE_REAL_TIME_NOTIFICATIONS=true
ENABLE_SMS_NOTIFICATIONS=true
ENABLE_EMAIL_NOTIFICATIONS=true
ENABLE_BACKUP_AUTOMATION=true

# === FRONTEND ENVIRONMENT VARIABLES ===
VITE_API_BASE_URL=http://localhost:3000
VITE_WS_URL=ws://localhost:3000
VITE_APP_NAME="Rindwa Emergency Response"
VITE_APP_VERSION=1.0.0
VITE_ENABLE_ANALYTICS=false
VITE_ENABLE_DEBUG=true
VITE_GOOGLE_MAPS_API_KEY=your-google-maps-api-key

# Note: MOBILE_API_KEY is NOT needed - mobile app uses same backend API
